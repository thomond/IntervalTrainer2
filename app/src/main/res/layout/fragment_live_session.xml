<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ui.fragments.LiveSessionFragment">

    <LinearLayout
        android:id="@+id/livesession_view"
        android:layout_width="0dp"
        android:layout_height="565dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="ðŸ“"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="5dp"
                android:text="Distance: "
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/liveSession_distance"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="5dp"
                android:text=""
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="ðŸ›° "
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:minWidth="50sp"
                android:padding="5dp"
                android:text="Location: "
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/liveSession_location"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:minWidth="50sp"
                android:padding="5dp"
                android:text=""
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="âš¡"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="5dp"
                android:text="Speed: "
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/liveSession_speed"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="5dp"
                android:text=""
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:capitalize="none"
                android:ellipsize="middle"
                android:padding="5dp"
                android:text="Interval"
                android:textAlignment="inherit"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/liveSessionInterval_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/liveSessionInterval_type"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="5dp"
                android:text="-"
                android:textAlignment="center"
                android:textSize="48sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:padding="5dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="ðŸ•›"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="5dp"
                android:text="Time Left: "
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/liveSessionInterval_countdown"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="5dp"
                android:text=""
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/liveSessionToggleBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Start"
                android:textAlignment="center" />

            <Button
                android:id="@+id/liveSessionStopBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop"
                android:visibility="gone" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView2"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:capitalize="none"
            android:ellipsize="middle"
            android:padding="10dp"
            android:text="Location"
            android:textAlignment="inherit"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold" />

        <org.osmdroid.views.MapView
            android:id="@+id/liveSession_map"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/livesession_finish_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session Finished"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ†"
            android:textAlignment="center"
            android:textSize="64sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>