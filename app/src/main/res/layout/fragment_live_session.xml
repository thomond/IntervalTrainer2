<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ui.LiveSessionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:capitalize="none"
            android:ellipsize="middle"
            android:padding="5dp"
            android:text="Location"
            android:textAlignment="inherit"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold" />


        <org.osmdroid.views.MapView android:id="@+id/liveSession_map"
            android:layout_width="fill_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="📏"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Distance: "
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/liveSession_distance"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text=""
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="🛰 "
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:minWidth="50sp"
                android:text="Location: "
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/liveSession_location"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:minWidth="50sp"
                android:text=""
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="⚡"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Speed: "
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/liveSession_speed"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text=""
                android:textSize="18sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:capitalize="none"
                android:ellipsize="middle"
                android:padding="5dp"
                android:text="Current Interval"
                android:textAlignment="inherit"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/liveSessionInterval_type_img"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="🏃"
                android:textAlignment="center"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/liveSessionInterval_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="🕛"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Time Left: "
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/liveSessionInterval_countdown"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text=""
                android:textSize="18sp" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/liveSessionToggleBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Start"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>