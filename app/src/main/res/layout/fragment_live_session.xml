<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.LiveSessionFragment">


    <LinearLayout
        android:id="@+id/livesession_view"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <org.osmdroid.views.MapView
            android:id="@+id/liveSession_map"
            android:layout_width="fill_parent"
            android:layout_height="232dp"
            android:padding="10dp">

        </org.osmdroid.views.MapView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_weight="1" />

        <Button
            android:id="@+id/liveSessionToggleBtn"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="Start"
            android:textAlignment="center"
            android:visibility="visible" />

        <Button
            android:id="@+id/liveSessionStopBtn"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="Stop"
            android:textAlignment="center"
            android:visibility="visible" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp
"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView2"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:capitalize="none"
            android:ellipsize="middle"
            android:padding="10dp"
            android:text="Location"
            android:textAlignment="inherit"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:capitalize="none"
                    android:ellipsize="middle"
                    android:padding="6dp"
                    android:text="Session"
                    android:textAlignment="inherit"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Session Info Box -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:minWidth="50sp"
                        android:padding="5dp"
                        android:text=" 🛰 Location: "
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/liveSession_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:minWidth="50sp"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:padding="5dp"
                        android:text=" ⚡ Speed "
                        android:textAlignment="textStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/liveSession_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:minWidth="50sp"
                        android:padding="5dp"
                        android:text="0 "
                        android:textAlignment="textEnd"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:capitalize="none"
                    android:ellipsize="middle"
                    android:padding="6dp"
                    android:text="Interval"
                    android:textAlignment="inherit"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/liveSessionInterval_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAlignment="textEnd"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/liveSessionInterval_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="5dp"
                        android:text="-"
                        android:textAlignment="center"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:padding="5dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="5dp"
                        android:text=" 🕛 Time Left "
                        android:textAlignment="textStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/liveSessionInterval_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:minWidth="50sp"
                        android:padding="5dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:minWidth="50sp"
                        android:padding="5dp"
                        android:text=" 📏 Distance "
                        android:textAlignment="textStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/liveSession_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:minWidth="50sp"
                        android:padding="5dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/livesession_finish_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session Finished"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏆"
            android:textAlignment="center"
            android:textSize="64sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>